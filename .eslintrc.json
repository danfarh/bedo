{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "graphql"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "import/extensions": 0,
    "class-methods-use-this": 0,
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-unused-vars": 2,
    "semi": 0,
    "no-console": "off",
    "new-parens": "off",
    "no-var": 2,
    "no-underscore-dangle": "off",
    "no-param-reassign": "off"
  }
}
